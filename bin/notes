#!/bin/bash
# ----------------------------------------------------------------------------
# @file notes
# Simple notebook
# @see rcs
# @see color
# @author Alister Lewis-Bowen [alister@different.com]
# ----------------------------------------------------------------------------

EDITOR=${EDITOR:-'vi'};
NOTEBOOK=~/.NOTES;
RCS=`dirname $NOTEBOOK`/RCS;

# Function: Help
# ----------------------------------------------------------------------------

function help {
	echo;
	echo "$(color bd)Simple notebook$(color)";
	echo;
	echo 'Usage:';
	echo "$(color bd)notes$(color) [ -e | --edit | -h | --help | -l | --list ]";
	echo;
	echo 'where:';
	echo '$(color bd)notes -e$(color) or $(color bd)notes --edit$(color) edits the notebook';
	echo '$(color bd)notes -h$(color) or $(color bd)notes --help$(color) provides this help text';
	echo '$(color bd)notes -l$(color) or $(color bd)notes --list$(color) or $(color bd)notes$(color) displays the notebook;
	echo;
	exit 1;
}

# Create notebook file under RCS control
# ----------------------------------------------------------------------------

if [ !-e $NOTEBOOK ]; then 
	touch $NOTEBOOK;
	echo "$Id$" > $NOTEBOOK;
	chmod 644 $NOTEBOOK;
	if [ !-d $RCS ]; then mkdir -p $RCS; fi;
	ci $NOTEBOOK;
	co $NOTEBOOK;
fi;

# Parse command line options
# ----------------------------------------------------------------------------
	
case "$1" in
	-e | --edit )
		co -l $NOTEBOOK;
		$EDITOR $NOTEBOOK;
		ci -l $NOTEBOOK;
		co $NOTEBOOK;
		;;
	-h | --help )	help;;
	*)		cat $NOTEBOOK;;
esac

exit 0;