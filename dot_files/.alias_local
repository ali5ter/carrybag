#
# @file alias_local
# Optional file to contain local alias customizations
# @author Alister Lewis-Bowen <alister@different.com>
#

#
# If color not available then make it known quick!
# @see http://code.google.com/p/ansi-color/
#

hash color 2>&- || echo >&2 "color is not installed. You can get it from http://code.google.com/p/ansi-color/"

#
# OSX list file colors
#

[ `uname` != 'Darwin' ] && alias ls='ls -FG --color=auto';

#
# Drush for manipulating Drupal installations
#

[ -e ~/bin/drush ] && alias drush='php ~/bin/drush/drush.php';

#
# iCall access from the command line
# meetings ... show all todays iCall events
#

[ -e /usr/local/bin/icalBuddy ] && alias meetings="icalBuddy -sc -n -f -eep notes eventsToday";

#
# KBM control
# synergys 'server hostname' ..................... start synergy server
# synergyc 'client hostname' 'server hostname' ... start synergy client
#

if [ -e ~/Applications/synergy ]; then
    alias synergys="killit synergys; ~/Applications/synergy/synergys -c ~/.synergy.conf -n $1 -f";
    alias synergyc="killit synergyc; ~/Applications/synergy/synergyc --name $1 -f $2";
fi

#
# MAMP utils
# phplog ...... tail the PHP error log
# cleanmamp ... delete the pid files for apache and mysql
#

if [ -e /Applications/MAMP ]; then
    alias phplog="tail -f /Applications/MAMP/logs/php_error.log";                   # Tail the php error log
    alias clean_mamp="cd /Applications/MAMP; find . -name "*.pid" | xargs rm -f";   # Clean MAMP pid files
fi

#
# rmDS_Store ... delete DS_Store files from the current directory
#
alias rmDS_Store='find . -name .DS_Store -exec rm {} \;'

#
# Revision control
# showsvn .... show all svn directories fromthis directory down
# rmsvn ...... delete all svn directories fromthis directory down
# showgit .... show all git directories fromthis directory down
#

alias showsvn='find . | egrep svn';
alias rmsvn='find . | egrep svn | xargs rm -fR';
alias showgit='find . | egrep .git';

#
# fword word ... find a word in the OSX dictionary
#
[ -e /Applications/Dictionary.app ] && fword () { open dict:///"$@" ; }


