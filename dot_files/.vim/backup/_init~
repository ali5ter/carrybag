#!/bin/bash
# ----------------------------------------------------------------------------
# @file _init
# Make sure all paths, vars, etc are initialized first
# @package vcloud_dev_utils
# @author Alister Lewis-Bowen <alister@vmware.com>
# @requires
# ----------------------------------------------------------------------------

#
# Perforce environment
#
export P4CONFIG=.p4config;

#
# Maven enviroment
#
export M2_HOME=~/bin/apache-maven;
export MAVEN_OPTS='-Xmx1024M -XX:MaxPermSize=1024m';
alias mvn='~/bin/apache-maven/bin/mvn';

#
# Java enviroment
#
export JAVA_OPTS='-Xmx1024M -XX:MaxPermSize=1024m';

#
# Eclipse environment
#
if [ -e /Applications/Eclipse_3.5/Eclipse.app ]; then
    alias eclipse='open /Applications/Eclipse_3.5/Eclipse.app';
fi;

#
# Host aliases
#
alias vm1="ssh root@10.150.150.134 $1"; # akimbi

#
# Location of the various src trees
#
VCLOUD_SRC_MAIN=/Users/abowen/Documents/Projects/VMware/vCloud/Main/src/cloud
VCLOUD_SRC_REDWOOD=$VCLOUD_SRC_MAIN;
VCLOUD_SRC_BETA=/Users/abowen/Documents/Projects/VMware/vCloud/RedwoodBeta/src/cloud
VCLOUD_SRC_TEST=/Users/abowen/Documents/Projects/VMware/vCloud/RedwoodTesting/src/cloud
VCLOUD_SRC_CEDAR=/Users/abowen/Documents/Projects/VMware/vCloud/Cedar/src/cloud
VCLOUD_SRC_TOLEDO=/Users/abowen/Documents/Projects/VMware/vCloud/Toledo/src/cloud
VCLOUD_SRC_T2=/Users/abowen/Documents/Projects/VMware/vCloud/T2/src/cloud

#
# Set the default src tree location
#
if [ -z ${VCLOUD_SRC_ROOT} ]; then 
    export VCLOUD_SRC_ROOT=$VCLOUD_SRC_T2;
fi;

#
# Log message types
#
LOGMSG_ERROR=0;
LOGMSG_WARN=1;
LOGMSG_INFO=2;

#
# CloudCleaner invocation
#
VCLOUD_CLOUDCLEANER='java -jar /Users/abowen/bin/Cloudcleaner.jar';

#
# Open remote desktop connection to vCenter
#
VCLOUD_RDC_VCENTER='open /Applications/Remote\ Desktop\ Connection.app/ /Users/abowen/Documents/RDC\ Connections/vc.rdp';

#
# DB client invocation
#
VCLOUD_DB_CLIENT='open /Applications/SQLDeveloper.app';

#
# Rest client invocation
#
VCLOUD_REST_CLIENT="java -jar /Users/abowen/bin/Restclient.jar";

#
# Name/IP of the vCD cell database server
#
VCLOUD_DB_SERVER='10.150.150.134';

#
# Init script for the vCD cell database server
#
VCLOUD_DB_SERVER_INITD="/etc/init.d/oracle-xe";

#
# Location of Maven settings
#
M2_SETTINGS='/Users/abowen/.m2/settings.xml'

#
# Location of vCD cell properties
#
VCLOUD_PROPS='/Users/abowen/vcloud.properties';

#
# Location of the Config Wizard configuration file
#
VCLOUD_CONFIG_WIZARD_CONFIG="/Users/abowen/defaultConfigWizardState.xml";

#
# Location of the cell resources
#
VCLOUD_RESOURCES="$VCLOUD_SRC_ROOT/cell/vcloud-osgi-container/src/main/resources";

#
# Location of the cell global properties
#
VCLOUD_GLOBAL_PROPS="$VCLOUD_RESOURCES/etc/global.properties";

#
# Location of the vCD Logs directory
#
VCLOUD_LOGS_ROOT="$VCLOUD_RESOURCES/logs";

#
# Location of the presentation-api queries
#
VCLOUD_QUERY_LIST="$VCLOUD_RESOURCES/META-INF/spring/query-management-context.xml";

#
# Location of the mapping between query names  and the presentation-api queries
#
VCLOUD_QUERY_NAME_LIST="$VCLOUD_SRC_ROOT/ui/ssui/ui-vcloud-lib/src/main/generated-flex/com/vmware/vcloud/api/presentation/entity/query/QueryNameBase.as";

#
# Location of the mapping between presentation-api queries and database view name
#
VCLOUD_HIBERNATE_LIST="$VCLOUD_RESOURCES/META-INF/hibernate/hibernate.hbm.xml";

#
# Location of the SQL that supports the Oracle DB views
#
VCLOUD_VIEWS_SQL="$VCLOUD_SRC_ROOT/support/db/oracle/NewInstall_Funcs.sql";

#
# Location of the Page Id file
#
VCLOUD_VIEW_PAGE_ID="$VCLOUD_SRC_ROOT/ui/ssui/ui-vcloud-lib/src/main/flex/com/vmware/vcloud/common/utils/PageIdentification.as";

